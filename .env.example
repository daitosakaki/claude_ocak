# ==================== Server ====================
NODE_ENV=development
PORT=3001
USE_API_PREFIX=false

# ==================== MongoDB ====================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=superapp

# ==================== JWT ====================
# RSA Key Pair - RS256 için
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem

# Private key (tek satırda, \n ile)
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# Public key (tek satırda, \n ile)
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Refresh token secret (random string)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# Token süreleri (saniye)
JWT_ACCESS_TTL=900        # 15 dakika
JWT_REFRESH_TTL=604800    # 7 gün

# ==================== CORS ====================
# Virgülle ayrılmış origin'ler
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== Rate Limiting ====================
THROTTLE_TTL=60000        # 1 dakika (ms)
THROTTLE_LIMIT=60         # Genel limit
THROTTLE_LOGIN_LIMIT=5    # Login limit
