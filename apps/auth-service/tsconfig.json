{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@superapp/shared-types": ["../../packages/shared-types/src"],
      "@superapp/shared-utils": ["../../packages/shared-utils/src"],
      "@superapp/shared-database": ["../../packages/shared-database/src"],
      "@superapp/shared-auth": ["../../packages/shared-auth/src"],
      "@superapp/shared-pubsub": ["../../packages/shared-pubsub/src"],
      "@superapp/shared-logger": ["../../packages/shared-logger/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
