# Feed Service Environment Variables

# Servis ayarları
NODE_ENV=development
PORT=3004

# MongoDB bağlantısı
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=superapp

# Redis bağlantısı
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL değerleri (saniye)
HOME_FEED_CACHE_TTL=60
EXPLORE_FEED_CACHE_TTL=300
USER_TIMELINE_CACHE_TTL=120
HASHTAG_FEED_CACHE_TTL=120
TRENDING_CACHE_TTL=300

# Feed limitleri
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50
MAX_TRENDING_ITEMS=20

# Diğer servisler
USER_SERVICE_URL=http://localhost:3002
POST_SERVICE_URL=http://localhost:3003
INTERACTION_SERVICE_URL=http://localhost:3005

# GCP Pub/Sub
GCP_PROJECT_ID=superapp-dev
POST_EVENTS_TOPIC=post-events
INTERACTION_EVENTS_TOPIC=interaction-events
FEED_SUBSCRIPTION=feed-service-sub

# HTTP client
HTTP_TIMEOUT=5000
HTTP_RETRIES=2

# CORS
CORS_ORIGIN=*
