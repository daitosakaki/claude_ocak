# ==================== SERVER ====================
PORT=3000
NODE_ENV=development

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== JWT ====================
# RS256 public key (auth-service tarafından oluşturulan)
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"
JWT_ISSUER=superapp
JWT_AUDIENCE=superapp-api

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== RATE LIMITING ====================
RATE_LIMIT_IP_UNAUTH=60
RATE_LIMIT_IP_AUTH=120
RATE_LIMIT_USER=300
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_FORGOT=3
RATE_LIMIT_POST=30
RATE_LIMIT_UPLOAD=20

# ==================== TIMEOUTS ====================
REQUEST_TIMEOUT=30000
UPLOAD_TIMEOUT=120000

# ==================== RETRY ====================
RETRY_MAX_ATTEMPTS=2
RETRY_INITIAL_DELAY=100
RETRY_MAX_DELAY=1000

# ==================== CIRCUIT BREAKER ====================
CB_FAILURE_THRESHOLD=5
CB_RESET_TIMEOUT=30000

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=json

