# ==========================================
# Media Service Environment Variables
# ==========================================

# ==================== GENEL ====================
NODE_ENV=development
PORT=3006

# CORS
CORS_ORIGIN=*

# ==================== GCP ====================
GCP_PROJECT_ID=superapp-project

# ==================== STORAGE ====================
GCS_BUCKET_NAME=superapp-media
GCS_LOCATION=europe-west1
GCS_ACCESS_TYPE=public
GCS_SIGNED_URL_EXPIRY=3600
GCS_CACHE_CONTROL=public, max-age=31536000
GCS_STORAGE_CLASS=STANDARD

# CDN
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.superapp.com

# ==================== UPLOAD ====================
MAX_FILE_SIZE=104857600
MAX_FILES_PER_REQUEST=10
TEMP_DIR=/tmp/uploads

# ==================== RESÄ°M ====================
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85
IMAGE_OUTPUT_FORMAT=
IMAGE_CONVERT_WEBP=false
IMAGE_PRESERVE_EXIF=false
IMAGE_AUTO_ROTATE=true

# ==================== THUMBNAIL ====================
THUMB_WIDTH=300
THUMB_HEIGHT=300
THUMB_QUALITY=80
THUMB_FIT=cover
THUMB_FORMAT=jpeg

# ==================== VIDEO ====================
VIDEO_MAX_WIDTH=1920
VIDEO_MAX_HEIGHT=1080
VIDEO_MAX_DURATION=300
VIDEO_BITRATE=2500k
VIDEO_AUDIO_BITRATE=128k
VIDEO_CODEC=libx264
VIDEO_AUDIO_CODEC=aac
VIDEO_PRESET=medium
VIDEO_CRF=23
VIDEO_OUTPUT_FORMAT=mp4
VIDEO_THUMB_TIME=00:00:01

# ==================== SES ====================
AUDIO_MAX_DURATION=300
AUDIO_BITRATE=128k
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2
AUDIO_OUTPUT_FORMAT=aac

# ==================== BLURHASH ====================
BLURHASH_COMPONENT_X=4
BLURHASH_COMPONENT_Y=3
